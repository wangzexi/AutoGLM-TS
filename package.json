{
  "name": "autoglm-ts",
  "version": "0.1.0",
  "type": "module",
  "description": "Phone agent powered by GLM vision-language models",
  "main": "./src/index.ts",
  "scripts": {
    "start": "tsx --env-file=.env src/main.ts",
    "dev": "concurrently -n server,web -c blue,green \"tsx --env-file=.env --watch src/main.ts\" \"cd web && npm run dev\"",
    "build": "cd web && npm run build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@orpc/server": "^1.12.3",
    "@yume-chan/adb": "^2.3.1",
    "@yume-chan/adb-server-node-tcp": "^2.1.0",
    "@yume-chan/stream-extra": "^2.1.0",
    "dayjs": "^1.11.19",
    "hono": "^4.11.0",
    "sharp": "^0.34.5",
    "zod": "^4.1.13"
  },
  "volta": {
    "node": "24.12.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
